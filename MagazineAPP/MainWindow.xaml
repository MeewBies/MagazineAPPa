<Window x:Class="MagazineAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagazineAPP"
        mc:Ignorable="d"
        Title="ООО Улов" Height="850" MaxWidth="900" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Button Name="Btn_vhod" Content="Войти" FontWeight="SemiBold" Width="100" Height="25" HorizontalAlignment="Right" Margin="0 0 10 0" Click="Btn_vhod_Click"/>
            <TextBlock Text="Здравствуйте, Гость!" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0"/>
        </Grid>

        <Frame NavigationUIVisibility="Hidden" Name="MainFrame" Grid.Row="1"/>

    </Grid>
</Window>
